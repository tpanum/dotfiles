[colors]
background = #2f343f
background-alt = #4f545f
foreground = #d8dee8
foreground-alt = #787e68
accent = #81a1c1
alert = #ebcb8b

[bar/top]
height = 30
fixed-center = true
background = 0
foreground = ${colors.foreground}
padding-left = 4
padding-right = 4
module-margin-left = 2
module-margin-right = 2
font-0 = Noto Sans:pixelsize=9;2
font-1 = FontAwesome:pixelsize=10;2
font-2 = FontAwesome:pixelsize=12;2
font-3 = MaterialIcons:pixelsize=12;4
modules-left = i3 xwindow
modules-right = eth wlan memory volume keyboard battery date

[module/i3]
type = internal/i3
pin-workspaces = true
strip-wsnumbers = true
index-sort = true
enable-click = false
enable-scroll = false
wrapping-scroll = false
reverse-scroll = false
fuzzy-match = true

label-focused = %{T3}%name%%{T-}
label-focused-foreground= ${colors.foreground}
label-focused-padding = 4

label-unfocused = %{T3}%name%%{T-}
label-unfocused-foreground= ${colors.accent}
label-unfocused-padding = 4

label-occupied = %name%
label-occupied-padding = 3
label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-foreground = ${colors.background}
label-urgent-padding = 3
label-empty = %name%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 3


[module/xwindow]

type = internal/xwindow
label = %title:0:100:...%

[module/keyboard]

type = internal/xkeyboard

[module/memory]

type = internal/memory
