ramp-signal-0 =
ramp-signal-1 =
ramp-signal-2 =
ramp-signal-3 =
ramp-signal-4 =
ramp-signal-5 =

[module/mail]
type = custom/script
exec = notmuch count tag:unread
exec-if = notmuch count tag:unread | grep [1-9]
format-prefix = "  "
format-suffix = " "
format-foreground = ${colors.nord13}
interval = 10

[module/memory]
type = internal/memory
interval = 3

label = "  %percentage_used%% "
label-background = ${colors.nord1}
label-foreground = ${colors.nord8}