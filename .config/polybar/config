;---------------------------------------
;	   DATE MODULE
;---------------------------------------

[module/date]
type = internal/date

interval = 60

date = %a %d

time = %H:%M

label = %date%  %time%

label-date-foreground = ${colors.nord0}

format-foreground = ${colors.nord5}
format-background = ${colors.nord10}
format-padding = 1

;---------------------------------------
;	   VOLUME MODULE
;---------------------------------------

[module/volume]
type = internal/volume

