label-muted-foreground = ${colors.nord5}
label-muted-background = ${colors.nord1}

ramp-volume-0 = "  "
ramp-volume-0-foreground = ${colors.nord5}
ramp-volume-0-background = ${colors.nord1}
ramp-volume-1 = "  "
